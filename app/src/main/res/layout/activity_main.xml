<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/expression"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="end|center_vertical"
        android:singleLine="true"
        android:ellipsize="start"
        android:textColor="@android:color/black"
        android:textSize="44sp" />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow>

            <Button
                android:id="@+id/left_brace"
                style="@style/ActionButtonStyle"
                android:layout_height="wrap_content"
                android:text="(" />

            <Button
                android:id="@+id/right_brace"
                style="@style/ActionButtonStyle"
                android:layout_height="wrap_content"
                android:text=")" />

            <Button
                android:id="@+id/divide"
                style="@style/ActionButtonStyle"
                android:layout_height="wrap_content"
                android:text="รท" />

            <Button
                android:id="@+id/backspace"
                style="@style/ActionButtonStyle"
                android:layout_height="match_parent"
                android:text="DEL" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/b7"
                style="@style/ButtonStyle"
                android:layout_height="wrap_content"
                android:text="7" />

            <Button
                android:id="@+id/b8"
                style="@style/ButtonStyle"
                android:layout_height="wrap_content"
                android:text="8" />

            <Button
                android:id="@+id/b9"
                style="@style/ButtonStyle"
                android:layout_height="wrap_content"
                android:text="9" />

            <Button
                android:id="@+id/multiply"
                style="@style/ActionButtonStyle"
                android:layout_height="wrap_content"
                android:text="ร" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/b4"
                style="@style/ButtonStyle"
                android:layout_height="wrap_content"
                android:text="4" />

            <Button
                android:id="@+id/b5"
                style="@style/ButtonStyle"
                android:layout_height="wrap_content"
                android:text="5" />

            <Button
                android:id="@+id/b6"
                style="@style/ButtonStyle"
                android:layout_height="wrap_content"
                android:text="6" />

            <Button
                android:id="@+id/minus"
                style="@style/ActionButtonStyle"
                android:layout_height="wrap_content"
                android:text="-" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/b1"
                style="@style/ButtonStyle"
                android:layout_height="wrap_content"
                android:text="1" />

            <Button
                android:id="@+id/b2"
                style="@style/ButtonStyle"
                android:layout_height="wrap_content"
                android:text="2" />

            <Button
                android:id="@+id/b3"
                style="@style/ButtonStyle"
                android:layout_height="wrap_content"
                android:text="3" />

            <Button
                android:id="@+id/plus"
                style="@style/ActionButtonStyle"
                android:layout_height="wrap_content"
                android:text="+" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/b00"
                style="@style/ButtonStyle"
                android:layout_height="wrap_content"
                android:text="00" />

            <Button
                android:id="@+id/b0"
                style="@style/ButtonStyle"
                android:layout_height="wrap_content"
                android:text="0" />

            <Button
                android:id="@+id/comma"
                style="@style/ButtonStyle"
                android:layout_height="wrap_content"
                android:text="," />

            <Button
                android:id="@+id/equals"
                style="@style/MainActionButtonStyle"
                android:layout_height="wrap_content"
                android:text="=" />
        </TableRow>

    </TableLayout>

</LinearLayout>